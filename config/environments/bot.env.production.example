# Telegram Bot Production Configuration

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook Configuration (Production)
WEBHOOK_BASE_URL=https://yourdomain.com
WEBHOOK_PATH=/webhook/telegram
WEBHOOK_PORT=8443
WEBHOOK_SECRET=your_secure_webhook_secret_here
WEBHOOK_ADMIN_TOKEN=your_admin_token_for_security_endpoints

# Security Configuration
NODE_ENV=production
ENABLE_SECURITY=true

# Redis Configuration (Required for production)
REDIS_HOST=82.147.84.78
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://82.147.84.78:6379

# API Configuration
API_URL=http://82.147.84.78:3001
API_TOKEN=your_api_token

# CMS Configuration (Optional)
CMS_BASE_URL=http://82.147.84.78:1337

# Logging
LOG_LEVEL=info

# Rate Limiting (Production Settings)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=20
RATE_LIMIT_BLOCK_DURATION=600000

# Anti-Spam Configuration
SPAM_MAX_MESSAGES_PER_MINUTE=15
SPAM_MAX_COMMANDS_PER_MINUTE=8
SPAM_SUSPICION_THRESHOLD=60
SPAM_BAN_DURATION=3600000

# SSL/TLS (Optional - for HTTPS webhook)
WEBHOOK_CERT_FILE=/path/to/cert.pem
WEBHOOK_KEY_FILE=/path/to/private.key

# Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=300000

# Development/Debug
DEBUG_ENABLED=false
VERBOSE_LOGGING=false
