# =============================================================================
# BACKEND SERVER CONFIGURATION (Port 3001)
# =============================================================================

# Server
NODE_ENV=development
PORT=3001

# URLs
FRONTEND_URL=http://82.147.84.78:3000
ADMIN_PANEL_URL=http://82.147.84.78:3001/admin
BOT_URL=http://82.147.84.78:3003

# CORS Configuration
CORS_WHITELIST=http://82.147.84.78:3000,http://82.147.84.78:5173,http://82.147.84.78:3001
CORS_CREDENTIALS=true
ADDITIONAL_CORS_ORIGINS=http://82.147.84.78:3000,http://82.147.84.78:3001

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_PROVIDER=sqlite
DATABASE_URL=file:./prisma/dev.db

# For PostgreSQL (production):
# DATABASE_PROVIDER=postgresql
# DATABASE_URL=postgresql://user:password@82.147.84.78:5432/telegram_ecommerce

# =============================================================================
# JWT SECRETS (CHANGE THESE!)
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-this-jwt-secret-to-something-very-secure-and-random-at-least-32-chars
JWT_REFRESH_SECRET=change-this-refresh-secret-to-something-very-secure-and-random-at-least-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# ENCRYPTION KEYS (REQUIRED!)
# =============================================================================
# Generate with: node scripts/generate-key-ids.js
MASTER_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
ENCRYPTION_KEY_ID=dev-key-1
ENCRYPTION_ALGORITHM=aes-256-gcm

# Additional encryption keys
DATA_ENCRYPTION_KEY=fedcba9876543210fedcba9876543210fedcba9876543210fedcba9876543210
SECURITY_LOGS_KEY_ID=security-logs-key-1
SBOM_SIGNING_KEY_ID=sbom-key-1
COMMUNICATION_KEY_ID=comm-key-1
WEBSOCKET_KEY_ID=ws-key-1
BACKUP_KEY_ID=backup-key-1
STORAGE_KEY_ID=storage-key-1
LOG_KEY_ID=log-key-1

# =============================================================================
# ADMIN PANEL
# =============================================================================
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=changeme123
ADMIN_COOKIE_SECRET=change-this-cookie-secret-min-32-chars-long-please
ADMIN_SESSION_SECRET=change-this-session-secret-min-32-chars-long-please

# =============================================================================
# TELEGRAM BOT
# =============================================================================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook configuration
TELEGRAM_WEBHOOK_SECRET=change-this-webhook-secret-please
WEBHOOK_PATH=/webhook/telegram

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
# REDIS_URL=redis://82.147.84.78:6379

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# =============================================================================
# RATE LIMITING
# =============================================================================
API_RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=10
UPLOAD_RATE_LIMIT_MAX=20

# =============================================================================
# CSRF & SECURITY
# =============================================================================
# Set to true to temporarily disable CSRF in development
DISABLE_CSRF=false
COOKIE_SECURE=false
SESSION_SECURE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ADMINJS=false
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true

