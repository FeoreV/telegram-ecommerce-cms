# JWT Configuration (REQUIRED - Change in production!)
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-different-from-jwt
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_CLOCK_SKEW=30
JWT_ISSUER=telegram-store-api
JWT_AUDIENCE=telegram-store-users

# Rate Limiting
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10

# CORS Configuration
FRONTEND_URL=http://82.147.84.78:3000
ADMIN_PANEL_URL=http://82.147.84.78:3001
ADDITIONAL_CORS_ORIGINS=http://82.147.84.78:5173

# Security Features (true/false)
ENABLE_BRUTE_FORCE_PROTECTION=true
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_SANITIZATION=true
ENABLE_SECURITY_MONITORING=true

# Admin IP Whitelist (comma-separated, optional)
# ADMIN_IP_WHITELIST=127.0.0.1,::1,192.168.1.100

# Request Size Limits
MAX_REQUEST_SIZE=10mb

# HTTPS Configuration (Production)
USE_HTTPS=false

# Redis Configuration (Recommended for production)
REDIS_URL=redis://82.147.84.78:6379

