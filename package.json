{
  "name": "@botrt/monorepo",
  "version": "1.0.0",
  "description": "Telegram bot for creating and managing online stores with admin panel",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --stream -r run dev",
    "dev:backend": "pnpm --filter @botrt/backend dev",
    "dev:frontend": "pnpm --filter @botrt/frontend dev",
    "dev:bot": "pnpm --filter @botrt/bot dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:backend": "pnpm --filter @botrt/backend build",
    "build:frontend": "pnpm --filter @botrt/frontend build",
    "build:bot": "pnpm --filter @botrt/bot build",
    "start": "pnpm --parallel -r run start",
    "start:backend": "pnpm --filter @botrt/backend start",
    "start:frontend": "pnpm --filter @botrt/frontend preview",
    "start:bot": "pnpm --filter @botrt/bot start",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter @botrt/backend test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "clean:all": "pnpm clean:deps && pnpm clean:dist",
    "db:generate": "pnpm --filter @botrt/backend db:generate",
    "db:migrate": "pnpm --filter @botrt/backend db:migrate",
    "db:reset": "pnpm --filter @botrt/backend db:reset",
    "db:seed": "pnpm --filter @botrt/backend db:seed",
    "db:studio": "pnpm --filter @botrt/backend db:studio",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "docker:dev": "node scripts/docker/dev.bat",
    "docker:start": "node scripts/docker/start.bat",
    "docker:rebuild": "node scripts/docker/rebuild-all.bat",
    "monitoring:start": "node scripts/monitoring/start.bat",
    "monitoring:stop": "node scripts/monitoring/stop.bat",
    "health-check": "node scripts/docker/health-check.js",
    "prepare": "husky install || true"
  },
  "keywords": [
    "telegram",
    "bot",
    "ecommerce",
    "admin",
    "react",
    "nodejs",
    "monorepo",
    "pnpm"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
