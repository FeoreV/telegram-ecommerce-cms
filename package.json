{
  "name": "@botrt/monorepo",
  "version": "1.0.0",
  "description": "Telegram bot for creating and managing online stores with admin panel",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --stream -r run dev",
    "dev:backend": "pnpm --filter telegram-ecommerce-backend dev",
    "dev:frontend": "pnpm --filter telegram-ecommerce-admin dev",
    "dev:bot": "pnpm --filter telegram-ecommerce-bot dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter telegram-ecommerce-backend build",
    "build:frontend": "pnpm --filter telegram-ecommerce-admin build",
    "build:bot": "pnpm --filter telegram-ecommerce-bot build",
    "start": "pnpm --parallel -r run start",
    "start:backend": "pnpm --filter telegram-ecommerce-backend start",
    "start:frontend": "pnpm --filter telegram-ecommerce-admin preview",
    "start:bot": "pnpm --filter telegram-ecommerce-bot start",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter telegram-ecommerce-backend test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter telegram-ecommerce-backend db:generate",
    "db:migrate": "pnpm --filter telegram-ecommerce-backend db:migrate",
    "db:reset": "pnpm --filter telegram-ecommerce-backend db:reset",
    "db:seed": "pnpm --filter telegram-ecommerce-backend db:seed",
    "db:studio": "pnpm --filter telegram-ecommerce-backend db:studio",
    "prepare": "husky install || true"
  },
  "keywords": [
    "telegram",
    "bot",
    "ecommerce",
    "admin",
    "react",
    "nodejs",
    "monorepo",
    "pnpm"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
